{
	"name": "@mariozechner/pi-mom",
	"version": "0.24.5",
	"description": "Chat bot (Slack/Discord) that delegates messages to the pi coding agent",
	"type": "module",
	"bin": {
		"mom": "dist/main.js"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist",
		"CHANGELOG.md"
	],
	"scripts": {
		"clean": "rm -rf dist",
		"build": "tsgo -p tsconfig.build.json && chmod +x dist/main.js",
		"dev": "tsgo -p tsconfig.build.json --watch --preserveWatchOutput",
		"check": "biome check --write . && tsgo --noEmit",
		"prepublishOnly": "npm run clean && npm run build"
	},
	"dependencies": {
		"@anthropic-ai/sandbox-runtime": "^0.0.16",
		"@mariozechner/pi-agent-core": "^0.24.5",
		"@mariozechner/pi-ai": "^0.24.5",
		"@mariozechner/pi-coding-agent": "^0.24.5",
		"@sinclair/typebox": "^0.34.0",
		"@slack/socket-mode": "^2.0.0",
		"@slack/web-api": "^7.0.0",
		"chalk": "^5.6.2",
		"croner": "^9.1.0",
		"diff": "^8.0.2",
		"discord.js": "^14.16.3"
	},
	"devDependencies": {
		"@types/diff": "^7.0.2",
		"@types/node": "^24.3.0",
		"typescript": "^5.7.3"
	},
	"keywords": [
		"slack",
		"discord",
		"bot",
		"ai",
		"agent"
	],
	"author": "Mario Zechner",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/badlogic/pi-mono.git",
		"directory": "packages/mom"
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
